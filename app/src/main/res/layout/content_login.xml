<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/loginimage1"
    tools:showIn="@layout/activity_login"
    tools:context="com.mallock.bicyclelending.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/applogo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:shadowColor="#ffd36a6a"
        android:shadowRadius="5"
        android:onClick="checkLogin"
        android:id="@+id/button4"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/EditTextPassword"
        android:layout_alignEnd="@+id/EditTextPassword"
        android:layout_alignLeft="@+id/EditTextPassword"
        android:layout_alignStart="@+id/EditTextPassword"
        android:textStyle="bold"
        android:background="#55ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Now!"
        android:id="@+id/button2"
        android:onClick="forgotPassword"
        android:background="#3bffffff"
        android:textColorLink="#110cff"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="33dp"
        android:backgroundTint="#00ffffff"
        android:layout_below="@+id/checkBox"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EditTextUsername"
        android:background="#00ffffff"
        android:hint="E-mail ID"
        android:height="20dp"
        android:text="HelloWorld"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:autoText="true"
        android:layout_above="@+id/EditTextPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="other"
        android:ems="10"
        android:id="@+id/EditTextPassword"
        android:background="#00ffffff"
        android:hint="Password"
        android:layout_marginTop="30dp"
        android:height="20dp"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/EditTextUsername"
        android:layout_alignStart="@+id/EditTextUsername"
        android:layout_marginBottom="28dp"
        android:textSize="26dp"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/checkBox"
        android:textStyle="bold"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginTop="198dp"
        android:textColor="#ffffff" />

</RelativeLayout>
